<!DOCTYPE html>
<html>
  <head>
    <title>FlairHQ</title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!--STYLES-->
    <link rel="stylesheet" href="/styles/importer.css">
    <!--STYLES END-->
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css">

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-23534541-2', 'auto');
      ga('send', 'pageview', {
        'page': location.pathname + location.search  + location.hash
      });

    </script>
    <% if(sails.config.environment == 'development' ){ %> <script src="http://localhost:35729/livereload.js"></script> <% } %>
  </head>

  <body ng-controller="userCtrl">
    <div id="wrapper">
      <%- partial ('home/header.ejs') %>
      <div id="splash" ng-hide="loaded">
        <div class="container">
        <div class="main container clearfix">
          <div class="content">
            <div class="row">
              <div class="col-md-12">
                <noscript>
                    <h2>
                        It appears you don't have JavaScript enabled.
                        If you don't have JavaScript, FlairHQ will not work for you.
                    </h2>
                </noscript>
                <div class="bigspinner">
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
      </div>
      <div class="hidden" ng-class="loaded ? '' : 'hidden'">
        <%- body %>
      </div>
    </div>

    <div id="footer">
      <div class="container">
        <a href="#privacypolicy" data-toggle="modal">Privacy Policy</a>
      </div>
    </div>

    <!--SCRIPTS-->
    <script src="/js/app.js"></script>
    <!--SCRIPTS END-->
  </body>
</html>
